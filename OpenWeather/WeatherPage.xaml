<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenWeather.WeatherPage"
             Title="Weather Details">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EEF7FF" Offset="0.0" />
            <GradientStop Color="#E3F0FF" Offset="0.55" />
            <GradientStop Color="#F7FBFF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20,24,20,24" Spacing="14">

            <Frame CornerRadius="24" Padding="20" HasShadow="True" BorderColor="#CFE3FF" BackgroundColor="#FFFFFF">
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="LblCity"
                           Text="City"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#102A43" />

                    <Label x:Name="LblCurTemp"
                           Text="Current Temp"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2563EB" />
                </VerticalStackLayout>
            </Frame>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Frame Grid.Column="0" CornerRadius="18" Padding="16" HasShadow="True" BorderColor="#D9E2EC" BackgroundColor="#FFFFFF">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="High"
                               FontSize="13"
                               TextColor="#486581" />
                        <Label x:Name="LblHighTemp"
                               Text="High Temp"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#102A43" />
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Column="1" CornerRadius="18" Padding="16" HasShadow="True" BorderColor="#D9E2EC" BackgroundColor="#FFFFFF">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Low"
                               FontSize="13"
                               TextColor="#486581" />
                        <Label x:Name="LblLowTemp"
                               Text="Low Temp"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#102A43" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Frame CornerRadius="20" Padding="18" HasShadow="True" BorderColor="#D9E2EC" BackgroundColor="#FFFFFF">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Atmospheric details"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#102A43" />

                    <Label x:Name="LblWind"
                           Text="Wind info"
                           FontSize="14"
                           TextColor="#486581" />

                    <Label x:Name="LblPressureHumidity"
                           Text="Pressure and humidity info"
                           FontSize="14"
                           TextColor="#486581" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

