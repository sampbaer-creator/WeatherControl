<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenWeather.MainPage"
             Title="OpenWeather">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F4F8FF" Offset="0.0" />
            <GradientStop Color="#E8F2FF" Offset="0.6" />
            <GradientStop Color="#F7FBFF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20,28,20,24" Spacing="16">

            <Frame CornerRadius="24" Padding="22" HasShadow="True" BorderColor="#DAE8FF" BackgroundColor="#FFFFFF">
                <VerticalStackLayout Spacing="8">
                    <Label Text="OpenWeather"
                           FontSize="34"
                           FontAttributes="Bold"
                           TextColor="#102A43" />
                    <Label Text="Fast weather lookup by ZIP or major city."
                           FontSize="15"
                           TextColor="#486581" />
                </VerticalStackLayout>
            </Frame>

            <Frame CornerRadius="20" Padding="18" HasShadow="True" BorderColor="#D9E2EC" BackgroundColor="#FFFFFF">
                <VerticalStackLayout Spacing="14">
                    <Label Text="Search by ZIP code"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#102A43" />

                    <Entry x:Name="EntryZipCode"
                           Placeholder="e.g., 10001"
                           Keyboard="Numeric"
                           HorizontalTextAlignment="Center"
                           BackgroundColor="#F8FAFC"
                           TextColor="#102A43"
                           PlaceholderColor="#829AB1"
                           HeightRequest="50" />

                    <Button x:Name="BtnShowTemp"
                            Text="Get Weather"
                            Clicked="BtnShowTemp_Clicked"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="14"
                            BackgroundColor="#2563EB"
                            TextColor="White" />
                </VerticalStackLayout>
            </Frame>

            <Frame CornerRadius="20" Padding="18" HasShadow="True" BorderColor="#D9E2EC" BackgroundColor="#FFFFFF">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Or choose a city"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#102A43" />

                    <Picker x:Name="CityPicker"
                            Title="Select a city"
                            HeightRequest="50"
                            BackgroundColor="#F8FAFC"
                            TitleColor="#829AB1"
                            SelectedIndexChanged="CityPicker_SelectedIndexChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>New York</x:String>
                                <x:String>Los Angeles</x:String>
                                <x:String>Chicago</x:String>
                                <x:String>Miami</x:String>
                                <x:String>Dallas</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </Frame>

            <Frame CornerRadius="20" Padding="18" HasShadow="True" BorderColor="#D9E2EC" BackgroundColor="#FFFFFF">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Latest conditions"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#102A43" />

                    <Label x:Name="WindLabel"
                           Text="Wind details will appear here"
                           FontSize="14"
                           TextColor="#486581" />

                    <Label x:Name="PressureHumidityLabel"
                           Text="Pressure and humidity will appear here"
                           FontSize="14"
                           TextColor="#486581" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

